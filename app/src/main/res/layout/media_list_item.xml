<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_cover"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerInside"
        android:layout_width="50dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/cover_image_description"/>
    <TextView
        android:id="@+id/media_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/image_cover"
        app:layout_constraintLeft_toRightOf="@id/image_cover"
        android:padding="10dp"
        android:text="@string/media_title"/>
    <TextView
        android:id="@+id/media_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/media_title"
        app:layout_constraintLeft_toLeftOf="@id/media_title"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="@string/media_type"
         />


    <TextView
        android:id="@+id/text_watched_or_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/watched_read"
        app:layout_constraintRight_toLeftOf="@id/checkbox_watched_or_read"
        app:layout_constraintTop_toTopOf="@id/checkbox_watched_or_read"
        app:layout_constraintBottom_toBottomOf="@id/checkbox_watched_or_read" />
    <CheckBox
        android:id="@+id/checkbox_watched_or_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/text_want_to_watch_or_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/want_to_watch_read"
        app:layout_constraintRight_toLeftOf="@id/checkbox_want_to_watch_or_read"
        app:layout_constraintTop_toTopOf="@id/checkbox_want_to_watch_or_read"
        app:layout_constraintBottom_toBottomOf="@id/checkbox_want_to_watch_or_read"
         />
    <CheckBox
        android:id="@+id/checkbox_want_to_watch_or_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        app:layout_constraintTop_toBottomOf="@id/checkbox_watched_or_read"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/text_owned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/owned"
        app:layout_constraintRight_toLeftOf="@id/checkbox_owned"
        app:layout_constraintTop_toTopOf="@id/checkbox_owned"
        app:layout_constraintBottom_toBottomOf="@id/checkbox_owned"
        />
    <CheckBox
        android:id="@+id/checkbox_owned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        app:layout_constraintTop_toBottomOf="@id/checkbox_want_to_watch_or_read"
        app:layout_constraintRight_toRightOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>