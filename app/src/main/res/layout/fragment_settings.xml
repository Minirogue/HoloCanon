<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SettingsFragment">

    <Button
        android:id="@+id/comic_settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toggle_comic_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/comic_settings_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/comic_settings_button"
        app:layout_constraintTop_toTopOf="@id/comic_settings_button"
        app:layout_constraintBottom_toBottomOf="@id/comic_settings_button"
        />

    <Button
        android:id="@+id/syncOnlineButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sync_online"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comic_settings_button"/>

</PreferenceScreen>